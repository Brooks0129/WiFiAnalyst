<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3000">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="SSID"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ssid"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="SSID"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="信号强度"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/level"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="level"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="中心频率"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/frequency"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="frequency"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="丢包率"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/loss"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="丢包率"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="延迟"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/delay"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="延迟"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="抖动"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/jitter"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="抖动"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="浏览网页评分"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#FFF">

            <RatingBar
                android:id="@+id/web_grade"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="观看视频评分"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#FFF">

            <RatingBar
                android:id="@+id/video_grade"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="社交聊天评分"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#FFF">

            <RatingBar
                android:id="@+id/chat_grade"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="经度"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="经度"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="纬度"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="纬度"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="位置信息"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#fff"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:text="位置信息"
            android:textSize="15sp" />

    </TableRow>


</TableLayout>