<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/dl"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.MainActivity" >
	<LinearLayout
		xmlns:custom="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin" >
		<LinearLayout
			android:id="@+id/ll_con"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal" >
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dp"
					android:text="已连接："
					android:textStyle="bold|italic" />
				<TextView
					android:id="@+id/tv_con_ssid"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FF3300"
					android:textStyle="bold" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="20dp"
					android:text="IP地址:"
					android:textStyle="bold|italic" />
				<TextView
					android:id="@+id/tv_con_ip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FF3300"
					android:textStyle="bold|italic" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/ll_discon"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="当前未连接Wifi"
				android:textColor="#FF3300"
				android:textStyle="bold" />
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="5px"
			android:background="#55ff0066" />
		<ListView
			android:id="@+id/lv_wifis"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:divider="#55ff0066"
			android:dividerHeight="5px" >
		</ListView>
		<View
			android:layout_width="match_parent"
			android:layout_height="5px"
			android:background="#55ff0066" />
	</LinearLayout>
	<!-- 指定滑动的方向，start/left是从左向右，end/right是从右向左 -->
	<LinearLayout
		android:layout_width="250dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:orientation="vertical" >
		<View
			android:layout_width="match_parent"
			android:layout_height="2px"
			android:layout_marginTop="10dp"
			android:background="#FFFFFF" />
		<ListView
			android:id="@+id/list_for_drawer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:divider="#FFFFFF"
			android:dividerHeight="1px"
			android:textColor="#ffffff"
			android:textStyle="bold"
			android:footerDividersEnabled="true"
			android:headerDividersEnabled="true" />
		<View
			android:layout_width="match_parent"
			android:layout_height="2px"
			android:background="#FFFFFF" />
		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#00FFFFFF" />
	</LinearLayout>
</android.support.v4.widget.DrawerLayout>